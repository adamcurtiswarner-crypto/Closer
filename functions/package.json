{
  "name": "closer-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Closer app",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "seed": "ts-node src/scripts/seedPrompts.ts",
    "seed:emulator": "FIRESTORE_EMULATOR_HOST=localhost:8080 ts-node src/scripts/seedPrompts.ts",
    "seed:emulator:clear": "FIRESTORE_EMULATOR_HOST=localhost:8080 ts-node src/scripts/seedPrompts.ts --clear",
    "test": "jest --config jest.config.js"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "date-fns": "^3.2.0",
    "date-fns-tz": "^3.2.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "private": true
}
